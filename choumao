-- Chmao脚本中心UI（包含五大加速功能，全部在功能1）
local UIS = game:GetService("UserInputService")
local RS = game:GetService("RunService")
local LP = game.Players.LocalPlayer

-- 主框体
local Main = Instance.new("ScreenGui")
Main.Name = "ChmaoScriptUI"
Main.ResetOnSpawn = false
Main.Parent = game.CoreGui

-- 半透明白色主框
local Frame = Instance.new("Frame", Main)
Frame.Size = UDim2.new(0, 600, 0, 350)
Frame.Position = UDim2.new(0.5, -300, 0.45, -175)
Frame.BackgroundColor3 = Color3.fromRGB(255,255,255)
Frame.BackgroundTransparency = 0.3
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true

-- 顶部栏
local TopBar = Instance.new("Frame", Frame)
TopBar.Size = UDim2.new(1, 0, 0, 36)
TopBar.BackgroundColor3 = Color3.fromRGB(255,255,255)
TopBar.BackgroundTransparency = 0.55
TopBar.BorderSizePixel = 0

-- 彩色渐变循环文字
local Title = Instance.new("TextLabel", TopBar)
Title.Size = UDim2.new(0,200,1,0)
Title.Position = UDim2.new(1,-210,0,0)
Title.AnchorPoint = Vector2.new(0,0)
Title.Text = "Chmao脚本"
Title.TextXAlignment = Enum.TextXAlignment.Right
Title.BackgroundTransparency = 1
Title.TextSize = 24
Title.Font = Enum.Font.GothamSemibold
Title.TextTransparency = 0.25
coroutine.wrap(function()
    while true do
        local t = tick()*1.5
        local r = 0.5+0.5*math.sin(t)
        local g = 0.5+0.5*math.sin(t+2)
        local b = 0.5+0.5*math.sin(t+4)
        Title.TextColor3 = Color3.new(r,g,b)
        wait(0.03)
    end
end)()

-- 左侧导航栏
local Sidebar = Instance.new("Frame", Frame)
Sidebar.Size = UDim2.new(0, 100, 1, -36)
Sidebar.Position = UDim2.new(0, 0, 0, 36)
Sidebar.BackgroundTransparency = 1
Sidebar.BorderSizePixel = 0

local TabBtns = {}
local function makeTab(name, order)
    local btn = Instance.new("TextButton", Sidebar)
    btn.Name = "Tab"..name
    btn.Size = UDim2.new(1, -14, 0, 40)
    btn.Position = UDim2.new(0, 7, 0, (order-1)*48+8)
    btn.BackgroundColor3 = Color3.fromRGB(255,255,255)
    btn.BackgroundTransparency = 0.45
    btn.TextColor3 = Color3.fromRGB(66,66,66)
    btn.Font = Enum.Font.Gotham
    btn.Text = name
    btn.TextSize = 19
    btn.AutoButtonColor = true
    btn.BorderSizePixel = 0
    btn.ClipsDescendants = true
    TabBtns[name..tostring(order)] = btn
    return btn
end

makeTab("信息", 1)
makeTab("功能", 3)
makeTab("功能", 4)
makeTab("功能", 5)

-- 多页主容器
local Pages = Instance.new("Frame", Frame)
Pages.Name = "Pages"
Pages.Size = UDim2.new(1, -100, 1, -36)
Pages.Position = UDim2.new(0, 100, 0, 36)
Pages.BackgroundTransparency = 1
Pages.BorderSizePixel = 0

-- 信息页
local InfoPage = Instance.new("Frame", Pages)
InfoPage.Name = "InfoPage"
InfoPage.BackgroundTransparency = 1
InfoPage.Size = UDim2.new(1,0,1,0)
InfoPage.Visible = true

-- 欢迎语
local Welcome = Instance.new("TextLabel", InfoPage)
Welcome.Size = UDim2.new(1, -30, 0, 40)
Welcome.Position = UDim2.new(0, 15, 0, 20)
Welcome.BackgroundTransparency = 1
Welcome.Text = "欢迎使用臭猫脚本"
Welcome.TextColor3 = Color3.fromRGB(40,40,40)
Welcome.TextSize = 28
Welcome.Font = Enum.Font.GothamBlack

-- 实时时间
local function getTimeText()
    local t = os.date("*t")
    return string.format("当前时间：%04d-%02d-%02d %02d:%02d:%02d", t.year, t.month, t.day, t.hour, t.min, t.sec)
end
local TimeLabel = Instance.new("TextLabel", InfoPage)
TimeLabel.Size = UDim2.new(1, -30, 0, 34)
TimeLabel.Position = UDim2.new(0, 15, 0, 70)
TimeLabel.BackgroundTransparency = 1
TimeLabel.Text = getTimeText()
TimeLabel.TextColor3 = Color3.fromRGB(90,90,90)
TimeLabel.TextSize = 20
TimeLabel.Font = Enum.Font.Gotham
coroutine.wrap(function()
    while true do
        TimeLabel.Text = getTimeText()
        wait(1)
    end
end)()
-- 其他信息
local QQLabel = Instance.new("TextLabel", InfoPage)
QQLabel.Size = UDim2.new(1, -30, 0, 54)
QQLabel.Position = UDim2.new(0, 15, 0, 110)
QQLabel.BackgroundTransparency = 1
QQLabel.Text = "QQ群:962873051\n作者:2563684259\n上次更新时间: 8月16日"
QQLabel.TextColor3 = Color3.fromRGB(80,80,80)
QQLabel.TextSize = 17
QQLabel.Font = Enum.Font.Gotham
QQLabel.TextYAlignment = Enum.TextYAlignment.Top
QQLabel.TextXAlignment = Enum.TextXAlignment.Left

-- 其他功能页占位
local OtherPages = {}
for i, name in pairs({"功能", "功能", "功能"}) do
    local page = Instance.new("Frame", Pages)
    page.Name = "Page"..name..i
    page.BackgroundTransparency = 1
    page.Size = UDim2.new(1,0,1,0)
    page.Visible = false
    OtherPages[i] = page
end

-- ------- 功能1页（五大加速） ---------
local Func1 = OtherPages[1]
Func1.Visible = false

local function makeBtn(parent, text, order)
    local btn = Instance.new("TextButton", parent)
    btn.Size = UDim2.new(0, 160, 0, 38)
    btn.Position = UDim2.new(0, 20, 0, 25+(order-1)*50)
    btn.BackgroundColor3 = Color3.fromRGB(255,255,255)
    btn.BackgroundTransparency = 0.4
    btn.TextColor3 = Color3.fromRGB(32,32,32)
    btn.Font = Enum.Font.GothamBold
    btn.Text = text
    btn.TextSize = 19
    btn.AutoButtonColor = true
    btn.BorderSizePixel = 0
    return btn
end

-- 1. 人物速度加速
local wsSet = false
local wsBtn = makeBtn(Func1, "人物速度加速", 1)
wsBtn.MouseButton1Click:Connect(function()
    if not wsSet then
        wsSet = true
        local hum = LP.Character and LP.Character:FindFirstChildOfClass("Humanoid")
        if hum then
            hum.WalkSpeed = 50
            wsBtn.Text = "速度已加速(50)"
        end
    end
end)

-- 2. 跳跃高度
local jpSet = false
local jpBtn = makeBtn(Func1, "跳跃高度加速", 2)
jpBtn.MouseButton1Click:Connect(function()
    if not jpSet then
        jpSet = true
        local hum = LP.Character and LP.Character:FindFirstChildOfClass("Humanoid")
        if hum then
            hum.JumpPower = 100
            jpBtn.Text = "跳跃已提升(100)"
        end
    end
end)

-- 3. 无限跳
local infJumpOn = false
local infBtn = makeBtn(Func1, "无限跳", 3)
infBtn.MouseButton1Click:Connect(function()
    infJumpOn = not infJumpOn
    infBtn.Text = infJumpOn and "无限跳(已开)" or "无限跳"
end)
UIS.JumpRequest:Connect(function()
    if infJumpOn then
        local hum = LP.Character and LP.Character:FindFirstChildOfClass("Humanoid")
        if hum then
            hum:ChangeState("Jumping")
        end
    end
end)

-- 4. 穿墙
local noclipOn = false
local noclipBtn = makeBtn(Func1, "穿墙", 4)
local noclipConn
noclipBtn.MouseButton1Click:Connect(function()
    noclipOn = not noclipOn
    if noclipOn then
        noclipBtn.Text = "穿墙(已开)"
        noclipConn = RS.Stepped:Connect(function()
            local char = LP.Character
            if char then
                for _, part in pairs(char:GetDescendants()) do
                    if part:IsA("BasePart") and part.CanCollide then
                        part.CanCollide = false
                    end
                end
            end
        end)
    else
        noclipBtn.Text = "穿墙"
        if noclipConn then
            noclipConn:Disconnect()
            noclipConn = nil
        end
        -- 恢复碰撞
        local char = LP.Character
        if char then
            for _, part in pairs(char:GetDescendants()) do
                if part:IsA("BasePart") then
                    part.CanCollide = true
                end
            end
        end
    end
end)

-- 5. 飞行
local flyOn = false
local flyBtn = makeBtn(Func1, "飞行", 5)
local flyConn, flyBV
flyBtn.MouseButton1Click:Connect(function()
    flyOn = not flyOn
    local char = LP.Character
    if flyOn and char then
        flyBtn.Text = "飞行(已开，WASD控制)"
        local hrp = char:FindFirstChild("HumanoidRootPart")
        if hrp then
            flyBV = Instance.new("BodyVelocity", hrp)
            flyBV.MaxForce = Vector3.new(1,1,1)*1e5
            flyBV.Velocity = Vector3.new()
            flyConn = RS.RenderStepped:Connect(function()
                local move = Vector3.new()
                if UIS:IsKeyDown(Enum.KeyCode.W) then move = move + workspace.CurrentCamera.CFrame.LookVector end
                if UIS:IsKeyDown(Enum.KeyCode.S) then move = move - workspace.CurrentCamera.CFrame.LookVector end
                if UIS:IsKeyDown(Enum.KeyCode.A) then move = move - workspace.CurrentCamera.CFrame.RightVector end
                if UIS:IsKeyDown(Enum.KeyCode.D) then move = move + workspace.CurrentCamera.CFrame.RightVector end
                if UIS:IsKeyDown(Enum.KeyCode.Space) then move = move + Vector3.new(0,1,0) end
                if UIS:IsKeyDown(Enum.KeyCode.LeftControl) then move = move - Vector3.new(0,1,0) end
                flyBV.Velocity = move.Unit * 50 * (move.Magnitude > 0 and 1 or 0)
            end)
        end
    else
        flyBtn.Text = "飞行"
        if flyConn then flyConn:Disconnect() flyConn=nil end
        if flyBV then flyBV:Destroy() flyBV=nil end
    end
end)

-- 页签切换
local tabMap = {
    ["Tab信息1"] = InfoPage,
    ["Tab功能3"] = Func1,
    ["Tab功能4"] = OtherPages[2],
    ["Tab功能5"] = OtherPages[3],
}
for tabName, btn in pairs(TabBtns) do
    btn.MouseButton1Click:Connect(function()
        for _, p in pairs(Pages:GetChildren()) do p.Visible = false end
        if tabMap[tabName] then
            tabMap[tabName].Visible = true
        end
    end)
end

-- 打开按钮（宽5高4，白色半透明）
local OpenBtn = Instance.new("TextButton", Frame)
OpenBtn.Text = "打开"
OpenBtn.Size = UDim2.new(0, 5*40, 0, 4*40)
OpenBtn.Position = UDim2.new(0.5, -100, 1, -60)
OpenBtn.AnchorPoint = Vector2.new(0,1)
OpenBtn.BackgroundColor3 = Color3.fromRGB(255,255,255)
OpenBtn.BackgroundTransparency = 0.25
OpenBtn.TextColor3 = Color3.fromRGB(20,20,20)
OpenBtn.Font = Enum.Font.GothamBold
OpenBtn.TextSize = 22
OpenBtn.BorderSizePixel = 0
OpenBtn.ClipsDescendants = true

-- 拖动
local dragging, dragInput, dragStart, startPos
TopBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = Frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)
TopBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)
UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        Frame.Position = startPos + UDim2.new(0, delta.X, 0, delta.Y)
    end
end)

-- UI打开/隐藏演示
OpenBtn.MouseButton1Click:Connect(function()
    Frame.Visible = false
    wait(0.15)
    Frame.Visible = true
end)

if Main.Parent ~= game.CoreGui then
    Main.Parent = game.CoreGui
end
