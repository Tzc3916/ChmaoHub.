FeaturePage1.BackgroundTransparency = 1
FeaturePage1.ScrollBarThickness = 4
FeaturePage1.Visible = false
FeaturePage1.Parent = ContentFrame

-- 创建功能按钮（示例）
createFeatureButton(FeaturePage1, "人物速度加速", UDim2.new(0.05, 0, 0, 15))
createFeatureButton(FeaturePage1, "超级跳跃", UDim2.new(0.05, 0, 0, 60))
createFeatureButton(FeaturePage1, "无限跳跃", UDim2.new(0.05, 0, 0, 105))
createFeatureButton(FeaturePage1, "穿墙模式", UDim2.new(0.05, 0, 0, 150))
createFeatureButton(FeaturePage1, "飞行模式", UDim2.new(0.05, 0, 0, 195))

-- 控制按钮（右上角）
local ToggleBtn = Instance.new("TextButton")
ToggleBtn.Size = UDim2.new(0, 100, 0, 32)
ToggleBtn.Position = UDim2.new(1, -110, 0, 10)
ToggleBtn.Text = "打开面板"
ToggleBtn.Font = Enum.Font.GothamBold
ToggleBtn.TextSize = 14
ToggleBtn.BackgroundColor3 = Color3.fromRGB(80, 120, 200)
ToggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleBtn.Parent = Main

local btnCorner = Instance.new("UICorner")
btnCorner.CornerRadius = UDim.new(0, 6)
btnCorner.Parent = ToggleBtn

-- 切换UI显示
ToggleBtn.MouseButton1Click:Connect(function()
    Frame.Visible = not Frame.Visible
    ToggleBtn.Text = Frame.Visible and "关闭面板" or "打开面板"
end)

-- 拖动功能
local dragging, dragInput, dragStart, startPos
TopBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = Frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        Frame.Position = startPos + UDim2.new(0, delta.X, 0, delta.Y)
    end
end)

-- 初始显示信息页
InfoPage.Visible = true